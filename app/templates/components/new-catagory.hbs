{{#if addNewCatagory}}
  <h1>Add a New Catagory</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Catagory Name</label>
        {{input value=name id="name"}}
      </div>
      <button {{action 'saveCatagory1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'catagoryFormShow'}}>New Catagory</button>
{{/if}}
